{
  "$schema": "http://json.schemastore.org/template",
  "author": "David Driscoll",
  "classifications": [
    "Common",
    "Function",
    "Rocket Surgery"
  ],
  "identity": "Rocket.Surgery.Functions",
  "name": "Rocket Surgery Azure Functions Application",
  "shortName": "rocketfun",
  "sourceName": "Rocket.Surgery.Functions",
  "symbols": {
    "sdk": {
      "datatype": "bool",
      "defaultValue": "false",
      "type": "parameter",
      "isRequired": false,
      "description": "Include the rocket surgery sdk with the project"
    },
    "version": {
      "datatype": "bool",
      "defaultValue": "false",
      "type": "parameter",
      "isRequired": false,
      "description": "Include the versions in the project file, typically these come from Directory.Build.targets or similar"
    },
    "no-automapper": {
      "datatype": "bool",
      "defaultValue": "false",
      "type": "parameter",
      "isRequired": false,
      "description": "Do not include AutoMapper in the dependencies"
    },
    "no-extensions": {
      "datatype": "bool",
      "defaultValue": "false",
      "type": "parameter",
      "isRequired": false,
      "description": "Do not include Rocket.Surgery.Extensions in the dependencies"
    },
    "no-fluentvalidation": {
      "datatype": "bool",
      "defaultValue": "false",
      "type": "parameter",
      "isRequired": false,
      "description": "Do not include FluentValidation in the dependencies"
    },
    "no-mediatr": {
      "datatype": "bool",
      "defaultValue": "false",
      "type": "parameter",
      "isRequired": false,
      "description": "Do not include MediatR in the dependencies"
    },
    "no-serilog": {
      "datatype": "bool",
      "defaultValue": "false",
      "type": "parameter",
      "isRequired": false,
      "description": "Do not include Serilog in the dependencies"
    }
  },
  "specialCustomOperations": {
    "*.yml": {
      "operations": [
        {
          "type": "conditional",
          "configuration": {
            "style": "line",
            "token": "#"
          }
        }
      ]
    }
  }
}
